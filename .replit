entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
#run = ["python3", "main.py"]
run = "cd docs && mkdocs serve"
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80
exposeLocalhost = true

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 3934055
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd docs && mkdocs serve -a 0.0.0.0:8000"
